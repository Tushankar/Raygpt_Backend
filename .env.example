# Copy this file to .env and fill in your real values locally.
# DO NOT commit your real .env file to git.

# Email (used by nodemailer)
EMAIL_USER=youremail@gmail.com
EMAIL_PASS=your-email-password-or-app-password
EMAIL_FROM="RayGPT <youremail@gmail.com>"

# Frontend URL used by email templates
FRONTEND_URL=http://localhost:5173

# Optional override booking link shown in emails/SMS
BOOKING_LINK=https://your-booking-link.example.com

# Twilio (for SMS) - set these if you want SMS to send
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Firebase and other required vars (example placeholders)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n
JWT_SECRET=your_jwt_secret_here
# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL
# For development: http://localhost:5173
# For production: https://your-frontend-domain.netlify.app
FRONTEND_URL=https://deluxe-melomakarona-d6559e.netlify.app
CLIENT_URL=https://deluxe-melomakarona-d6559e.netlify.app
SERVER_URL=http://localhost:5000

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-client-email@project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CLIENT_X509_CERT_URL=your-cert-url

# DIDit API Configuration
DIDIT_API_KEY=your-didit-api-key-here

# OpenRouter Configuration (for Mistral AI)
OPENROUTER_API_KEY=your-openrouter-api-key

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# JWT Secret
JWT_SECRET=your-jwt-secret-key

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Database Configuration (Optional)
DATABASE_URL=your-database-url

# Storage Configuration (Optional)
STORAGE_BUCKET=your-storage-bucket

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
